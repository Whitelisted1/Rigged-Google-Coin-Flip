{
   "name": "Rigged Google Coin Flip",
   "description": "Allows you to rig Google's Coin flip",
   "version": "0.0.7",
   "manifest_version": 3,

   "permissions": [
      "activeTab",
      "storage"
   ],

   "action": {
      "default_popup": "./options/options.html"
    },
   
   "content_scripts": [
      {
         "js": [ "coin_flip.js" ],
         "css": [ "coin_flip.css" ],
         "matches": [
            "*://*.google.com/*",
            "*://*.google.co.uk/*"
         ],
         "run_at": "document_end"
      }
   ]
}
